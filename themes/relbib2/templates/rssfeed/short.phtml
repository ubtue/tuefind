<?php $rssItems = $this->tuefind()->getRssNewsEntries($this->rssMaxItems, /* $only_newest_item_per_feed = */true);?>
<?php if (count($rssItems) == 0):?>
    <?=$this->translate('rss_news_missing')?>
<?php else:?>
    <?php $redirectGroup = 'relbib-rss-short'; ?>
    <ul id="tf-rss-short">
        <?php foreach ($rssItems as $rssItem):?>
            <li>
                <a class="tf-rss-short-link-icon" target="_blank" href="<?=$this->tuefind()->getRedirectUrl($rssItem['website_url'], $redirectGroup)?>" title="<?=$rssItem['feed_name']?>"><img src="<?=$this->tuefind()->getRssFeedIcon($rssItem['feed_name'])?>" height="16" title="<?=$rssItem['feed_name']?>"/></a>
                <a class="tf-rss-short-link-title" target="_blank" href="<?=$this->tuefind()->getRedirectUrl($rssItem['item_url'], $redirectGroup)?>" title="<?=str_replace('"', '&quot;', strip_tags($rssItem['item_description'] ?? $rssItem['item_title']))?>"><?=$rssItem['item_title']?></a>
            </li>
        <?php endforeach;?>
    </ul>
<?php endif;?>